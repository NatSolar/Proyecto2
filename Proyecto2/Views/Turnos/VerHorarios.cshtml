
<div class="card">
    <div class="card-header">
        <h3>Cuadro de horarios</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Lunes</th>
                    <th>Martes</th>
                    <th>Miércoles</th>
                    <th>Jueves</th>
                    <th>Viernes</th>
                    <th>Sábado</th>
                    <th>Domingo</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>
                            @if(ViewBag.horarioLunes != null)
                            {
                                foreach(var item in (List<Proyecto2.Models.HorarioMdl>)ViewBag.horarioLunes)
                                {
                                    <div class="card text-white bg-info mb-3">
                                        @item.USUARIO.nombre @item.USUARIO.apellido
                                        <br />
                                        @item.horaEntrada - @item.horaSalida
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @if (ViewBag.horarioMartes != null)
                            {
                                foreach (var item in (List<Proyecto2.Models.HorarioMdl>)ViewBag.horarioMartes)
                                {
                                    <div class="card text-white bg-success mb-3">
                                        @item.USUARIO.nombre @item.USUARIO.apellido
                                        <br />
                                        @item.horaEntrada - @item.horaSalida
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @if (ViewBag.horarioMiercoles != null)
                            {
                                foreach (var item in (List<Proyecto2.Models.HorarioMdl>)ViewBag.horarioMiercoles)
                                {
                                    <div class="card text-white bg-black mb-3">
                                        @item.USUARIO.nombre @item.USUARIO.apellido
                                        <br />
                                        @item.horaEntrada - @item.horaSalida
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @if (ViewBag.horarioJueves != null)
                            {
                                foreach (var item in (List<Proyecto2.Models.HorarioMdl>)ViewBag.horarioJueves)
                                {
                                    <div class="card text-white bg-danger mb-3">
                                        @item.USUARIO.nombre @item.USUARIO.apellido
                                        <br />
                                        @item.horaEntrada - @item.horaSalida
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @if (ViewBag.horarioViernes != null)
                            {
                                foreach (var item in (List<Proyecto2.Models.HorarioMdl>)ViewBag.horarioViernes)
                                {
                                    <div class="card text-white bg-primary mb-3">
                                        @item.USUARIO.nombre @item.USUARIO.apellido
                                        <br />
                                        @item.horaEntrada - @item.horaSalida
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @if (ViewBag.horarioSabado != null)
                            {
                                foreach (var item in (List<Proyecto2.Models.HorarioMdl>)ViewBag.horarioSabado)
                                {
                                    <div class="card text-white bg-secondary mb-3">
                                        @item.USUARIO.nombre @item.USUARIO.apellido
                                        <br />
                                        @item.horaEntrada - @item.horaSalida
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @if (ViewBag.horarioDomingo != null)
                            {
                                foreach (var item in (List<Proyecto2.Models.HorarioMdl>)ViewBag.horarioDomingo)
                                {
                                    <div class="card text-white bg-warning mb-3">
                                        @item.USUARIO.nombre @item.USUARIO.apellido
                                        <br />
                                        @item.horaEntrada - @item.horaSalida
                                    </div>
                                }
                            }
                        </td>
                    </tr>
            </tbody>
        </table>
    </div>
</div>

<br />
<button type="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='@Url.Action("Index", "Turnos")'">Regresar</button>