@model IEnumerable<Proyecto2.Models.TurnoMdl>

<div class="card">
    <div class="card-header">
        <h3>Gestión de turnos</h3>
    </div>
    <div class="card-body">
        <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("CrearTurno", "Turnos")'">Crear turno</button>
        <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("VerHorarios", "Turnos")'">Ver horarios</button>
        <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Agenda", "Turnos")'">Agenda</button>
        <br />
        <br />
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>No.</th>
                    <th>Nombre empleado</th>
                    <th>Días laborales</th>
                    <th>Horas laborales</th>
                    <th>Hora de entrada</th>
                    <th>Hora de salida</th>
                    <th>Fecha de registro</th>
                    <th>Encargado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.USUARIO.nombre) @Html.DisplayFor(modelItem => item.USUARIO.apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dias)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.horas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.horaEntrada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.horaSalida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fechaRegistro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.USUARIO1.nombre) @Html.DisplayFor(modelItem => item.USUARIO1.apellido)
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="location.href='@Url.Action("EliminarTurno", "Turnos", new { id = item.id })'">Eliminar</button>
                        </td>
                    </tr>
                }

                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="8" class="text-center">No hay turnos registrados.</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>