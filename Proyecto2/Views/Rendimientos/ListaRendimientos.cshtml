@model IEnumerable<Proyecto2.Models.EVALUACION>

<h4>Gestión de rendimientos</h4>
<br />
<button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("RealizarEvaluacion", "Rendimientos")'">Realizar evaluación</button>
<button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("ListaObjetivos", "Objetivos")'">Lista objetivos</button>
<br />
<br />
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>No.</th>
            <th>Nombre empleado</th>
            <th>Periodo</th>
            <th>Nota promedio</th>
            <th>Fecha de evaluación</th>
            <th>Evaluador</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USUARIO.nombre) @Html.DisplayFor(modelItem => item.USUARIO.apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PERIODO.desde) - @Html.DisplayFor(modelItem => item.PERIODO.hasta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.notaPromedio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaEvaluacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USUARIO1.nombre) @Html.DisplayFor(modelItem => item.USUARIO1.apellido)
                </td>
                <td>
                    <button type="button" class="btn btn-sm btn-success" onclick="location.href='@Url.Action("DetallesEvaluacion", "Rendimientos", new { id = item.id })'">Detalles</button>
                </td>
            </tr>
        }

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7" class="text-center">No hay evaluaciones hechas.</td>
            </tr>
        }

    </tbody>
</table>
